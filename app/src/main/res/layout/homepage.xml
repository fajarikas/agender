<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomepageActivity"
    android:background="@color/white_2"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="20dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            tools:srcCompat="@tools:sample/avatars" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Hi, James!"
                android:textColor="@color/green"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadilah pejuang kesetaraan!"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        >

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:hint="Cari di sini"
            android:imeOptions="actionSearch"
            android:padding="10dp"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button"
            android:text="Cari"
            android:textColor="@color/white_2"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akhir - akhir ini dilihat"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="14dp">
        
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pengenalan"
                    android:textColor="@color/white_2"
                    android:textSize="12dp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/group_13"
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_white" />

                <View
                    android:id="@+id/group_12"
                    android:layout_width="130dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_younggreen" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="4 Chapter"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="10 Chapter"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_younggreen2"
                android:text="Kesetaraan Gender"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false">
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/stroke_younggreen2"
                android:text="Keadilan Gender"
                android:textColor="@color/green"
                android:padding="5dp"
                android:textSize="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:layout_marginLeft="10sp">
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/stroke_younggreen2"
                android:text="Implementasi Kesetaraan Gender"
                android:textColor="@color/green"
                android:padding="5dp"
                android:textSize="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:layout_marginLeft="10sp">
            </Button>

        </LinearLayout>
    </HorizontalScrollView>

